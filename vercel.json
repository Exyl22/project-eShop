{
    "builds": [
      {
        "src": "server/app.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/$1" },
      { "src": "/(.*)", "dest": "client/$1" },
      {
        "src": "/(.*)",
        "dest": "client/build/$1"
      }
    ]
  }
  